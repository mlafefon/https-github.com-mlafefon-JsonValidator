{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "package",
  "description": "סכמה שנוצרה אוטומטית מהקובץ package.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "private": {
      "type": "boolean"
    },
    "version": {
      "type": "integer",
      "minimum": 10,
      "maximum": 99
    },
    "type": {
      "type": "string"
    },
    "scripts": {
      "type": "object",
      "enum": [
        "info",
        "error"
      ],
      "properties": {
        "dev": {
          "type": "string",
          "enum": [
            "info",
            "error"
          ]
        },
        "build": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        }
      },
      "required": [
        "dev",
        "build",
        "preview"
      ]
    },
    "dependencies": {
      "type": "object",
      "properties": {}
    },
    "devDependencies": {
      "type": "object",
      "properties": {
        "@types/node": {
          "type": "string"
        },
        "typescript": {
          "type": "string"
        },
        "vite": {
          "type": "string"
        }
      },
      "required": [
        "@types/node",
        "typescript",
        "vite"
      ]
    }
  },
  "required": [
    "name",
    "private",
    "version",
    "scripts",
    "dependencies",
    "devDependencies"
  ]
}