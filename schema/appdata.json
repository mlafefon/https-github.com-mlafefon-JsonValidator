{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Data",
  "description": "Schema for application specific data",
  "type": "object",
  "properties": {
    "app-info": {
      "type": "string",
      "enum": [
        "red",
        "green",
        "blue"
      ],
      "description": "Information about the application."
    },
    "appid": {
      "type": "string",
      "description": "The unique application identifier.",
      "minLength": 3,
      "maxLength": 10
    },
    "dikla": {
      "type": "string",
      "pattern": "^[A-Z][a-z]+$",
      "description": "A property that must start with a capital letter followed by lowercase letters."
    },
    "version": {
      "type": "number",
      "description": "The version number of the data.",
      "minimum": 1,
      "maximum": 10.5
    }
  },
  "required": [
    "app-info",
    "appid",
    "dikla",
    "version"
  ]
}